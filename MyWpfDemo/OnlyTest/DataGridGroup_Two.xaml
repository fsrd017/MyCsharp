<Window x:Class="OnlyTest.DataGridGroupTwo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OnlyTest"
        mc:Ignorable="d"
        Title="DataGridGroup" Height="450" Width="800">
   <Window.Resources>
      <Style x:Key="GroupHeaderStyle" TargetType="{x:Type GroupItem}">
         <Setter Property="Template">
            <Setter.Value>
               <ControlTemplate TargetType="{x:Type GroupItem}">
                  <Expander IsExpanded="True">
                     <Expander.Header>
                        <TextBlock Text="{Binding Path=Name}" />
                     </Expander.Header>
                     <ItemsPresenter />
                  </Expander>
               </ControlTemplate>
            </Setter.Value>
         </Setter>
      </Style>
   </Window.Resources>
   <Grid Background="White">
      <DataGrid x:Name="dataGrid1"  AutoGenerateColumns="False">
         <DataGrid.ContextMenu>
            <ContextMenu>
               <MenuItem Header="查询模式" IsCheckable ="True" IsChecked="{Binding FlterEnableBoolean, Mode=TwoWay}" />
            </ContextMenu>
         </DataGrid.ContextMenu>

         <DataGrid.GroupStyle>
            <GroupStyle>
               <GroupStyle.ContainerStyle>
                  <Style TargetType="{x:Type GroupItem}">
                     <Setter Property="Template">
                        <Setter.Value>
                           <ControlTemplate>

                              <Grid Margin="5">
                                 <Border x:Name="outerBorder"
                                BorderThickness="1"
                                BorderBrush="#FFFFFFFD"
                                Margin="0" Padding="0">
                                    <Border x:Name="innerBorder"
                                    BorderThickness="1"
                                    BorderBrush="#FFC6C6C6"
                                    Background="{TemplateBinding Background}"
                                    Padding="{TemplateBinding Padding}">

                                       <Expander  IsExpanded="True" VerticalAlignment="Stretch" ExpandDirection="Down" HorizontalContentAlignment="Left" SnapsToDevicePixels="True">
                                          <Expander.Header>
                                             <StackPanel Orientation="Horizontal">
                                                <Label Content="{Binding Name}" />
                                                <TextBlock Text="{Binding ItemCount}" VerticalAlignment="Center" />
                                             </StackPanel>
                                          </Expander.Header>
                                          <Expander.Content>
                                             <ItemsPresenter />
                                          </Expander.Content>
                                       </Expander>
                                    </Border>
                                 </Border>
                              </Grid>
                           </ControlTemplate>
                        </Setter.Value>
                     </Setter>
                  </Style>
               </GroupStyle.ContainerStyle>
            </GroupStyle>
         </DataGrid.GroupStyle>
